#define ZMK_POINTING_DEFAULT_MOVE_VAL 1200
#define ZMK_POINTING_DEFAULT_SCRL_VAL 25

/* 레이어 번호 정의 */

#define MOUSE_FAST 7
#define MOUSE_SLOW 8

#include <input/processors.dtsi>
#include <zephyr/dt-bindings/input/input-event-codes.h>
#include <behaviors.dtsi>
#include <dt-bindings/zmk/bt.h>
#include <dt-bindings/zmk/keys.h>
#include <dt-bindings/zmk/outputs.h>
#include <dt-bindings/zmk/pointing.h>

/* 마우스 리스너 설정 */

&mmv_input_listener {
    input-processors = <&zip_xy_scaler 2 1>;

    mouse_fast {
        layers = <MOUSE_FAST>;
        input-processors = <&zip_xy_scaler 4 1>;
    };

    mouse_slow {
        layers = <MOUSE_SLOW>;
        input-processors = <&zip_xy_scaler 1 1>;
    };
};

&msc_input_listener { input-processors = <&zip_scroll_scaler 2 1>; };

&msc {
    acceleration-exponent = <1>;
    time-to-max-speed-ms = <100>;
    delay-ms = <0>;
};

&mmv {
    time-to-max-speed-ms = <500>;
    acceleration-exponent = <1>;
    trigger-period-ms = <16>;
};

/ {
    behaviors {
        td0: td0 {
            compatible = "zmk,behavior-tap-dance";
            display-name = "Shift/Caps Lock Tap Dance";
            #binding-cells = <0>;
            bindings = <&kp LEFT_SHIFT>, <&kp CAPS>;
        };

        hm200: hm200 {
            compatible = "zmk,behavior-hold-tap";
            label = "HOMEROW_MODS";
            bindings = <&kp>, <&kp>;

            #binding-cells = <2>;
            tapping-term-ms = <200>;
            quick-tap-ms = <130>;
            require-prior-idle-ms = <(-1)>;
            flavor = "tap-preferred";
        };

        hm250: hm250 {
            compatible = "zmk,behavior-hold-tap";
            label = "HM250";
            bindings = <&kp>, <&kp>;

            #binding-cells = <2>;
            tapping-term-ms = <250>;
            quick-tap-ms = <130>;
            require-prior-idle-ms = <(-1)>;
            flavor = "tap-preferred";
        };
    };

    macros {
        // 스페이스 연타 매크로

        spc_spam: spc_spam {
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            wait-ms = <50>;
            tap-ms = <50>;
            bindings = <&kp SPACE &kp SPACE &kp SPACE &kp SPACE &kp SPACE &kp SPACE &kp SPACE &kp SPACE &kp SPACE &kp SPACE>;
        };

        // 마우스 좌우 스윕 매크로

        mouse_sweep: mouse_sweep {
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            wait-ms = <5>;
            tap-ms = <5>;
            bindings = <&tog 7 &mmv MOVE_RIGHT &mmv MOVE_LEFT &mmv MOVE_RIGHT &mmv MOVE_LEFT &mmv MOVE_RIGHT &mmv MOVE_LEFT &mmv MOVE_RIGHT &mmv MOVE_LEFT &mmv MOVE_RIGHT &mmv MOVE_RIGHT &mmv MOVE_RIGHT &mmv MOVE_RIGHT &mmv MOVE_LEFT &tog 7>;
        };
    };

    combos {
        compatible = "zmk,combos";

        mouse {
            bindings = <&tog 5>;
            key-positions = <37 40>;
        };

        game {
            bindings = <&tog 9>;
            key-positions = <18 40>;
        };
    };

    keymap {
        compatible = "zmk,keymap";

        default_layer {
            display-name = "QWERTY";
            bindings = <
&mt LG(A) LG(Z)  &kp SLASH       &kp W          &kp E              &kp R           &kp T                               &kp W             &kp Y        &kp U            &kp I              &kp O          &kp SEMICOLON   &trans
&mt LG(X) LG(C)  &hm250 LCTRL A  &hm200 LALT S  &hm200 LEFT_GUI D  &hm200 LSHFT F  &kp G                        &kp A  &mkp LCLK  &kp D  &kp H        &hm200 LSHFT J   &hm200 LEFT_GUI K  &hm200 LALT L  &hm250 LCTRL P  &trans
&kp LG(V)        &kp Z           &kp X          &kp C              &kp V           &kp Q           &kp SPACE           &kp S             &kp N        &kp M            &kp B              &kp COMMA      &kp PERIOD      &trans
                                                &lt 6 ESC          &lt 4 SPACE     &lt 5 CAPSLOCK                                        &lt 2 ENTER  &lt 1 BACKSPACE  &lt 3 DEL
            >;

            sensor-bindings = <&inc_dec_kp C_VOLUME_UP C_VOLUME_DOWN>;
        };

        Num {
            display-name = "Num";
            bindings = <
&trans  &kp LBKT   &kp N7  &kp N8  &kp N9      &kp RBKT                          &trans          &trans  &trans  &trans  &trans    &trans    &trans
&trans  &kp APOS   &kp N4  &kp N5  &kp N6      &kp EQUAL                 &trans  &trans  &trans  &trans  &trans  &trans  &trans    &trans    &trans
&trans  &kp GRAVE  &kp N1  &kp N2  &kp N3      &kp BSLH        &trans            &trans          &trans  &trans  &trans  &kp LBKT  &kp RBKT  &trans
                           &kp N0  &kp PERIOD  &kp UNDERSCORE                                    &trans  &trans  &trans
            >;
        };

        Sym {
            display-name = "Sym";
            bindings = <
&trans  &kp LBRC   &kp AMPS  &kp ASTRK  &kp LPAR   &kp RBRC                     &trans          &trans  &trans  &trans  &trans    &trans    &trans
&trans  &kp DQT    &kp DLLR  &kp PRCNT  &kp CARET  &kp PLUS             &trans  &trans  &trans  &trans  &trans  &trans  &trans    &trans    &trans
&trans  &kp TILDE  &kp EXCL  &kp AT     &kp HASH   &kp PIPE   &trans            &trans          &trans  &trans  &trans  &kp LBRC  &kp RBRC  &trans
                             &kp RPAR   &trans     &kp MINUS                                    &trans  &trans  &trans
            >;
        };

        Fun {
            display-name = "Fun";
            bindings = <
&trans  &kp F12  &kp F7  &kp F8     &kp F9     &kp PSCRN                      &trans          &trans  &trans  &trans  &trans  &trans  &trans
&trans  &kp F11  &kp F4  &kp F5     &kp F6     &kp SLCK               &trans  &trans  &trans  &trans  &trans  &trans  &trans  &trans  &trans
&trans  &kp F10  &kp F1  &kp F2     &kp F3     &kp C_PAUSE  &trans            &trans          &trans  &trans  &trans  &trans  &trans  &trans
                         &kp K_APP  &kp SPACE  &kp TAB                                        &trans  &trans  &trans
            >;
        };

        Nav {
            display-name = "Nav";
            bindings = <
&trans  &trans  &trans              &trans          &trans              &trans                    &trans          &trans   &trans     &kp UP     &trans     &trans    &trans
&trans  &trans  &kp LG(LC(LS(N4)))  &kp LG(LS(N5))  &trans              &trans            &trans  &trans  &trans  &kp TAB  &kp LEFT   &kp DOWN   &kp RIGHT  &kp HOME  &trans
&trans  &trans  &trans              &trans          &kp LG(LC(LS(N3)))  &trans  &trans            &trans          &kp INS  &kp PG_UP  &kp PG_DN  &kp END    &kp RALT  &trans
                                    &trans          &trans              &trans                                    &trans   &trans     &trans
            >;
        };

        Mouse {
            display-name = "Mouse";
            bindings = <
&trans  &trans     &trans     &trans     &trans     &trans                            &mmv MOVE_UP                     &kp LG(LBKT)  &kp LG(RBKT)    &mmv MOVE_UP    &kp LG(EQUAL)    &kp LG(MINUS)    &trans
&trans  &trans     &mo 8      &trans     &mo 7      &trans            &mmv MOVE_LEFT  &mkp LCLK       &mmv MOVE_RIGHT  &kp LG(LBKT)  &mmv MOVE_LEFT  &mmv MOVE_DOWN  &mmv MOVE_RIGHT  &trans           &trans
&trans  &kp LG(Z)  &kp LG(X)  &kp LG(C)  &kp LG(V)  &trans  &trans                    &mmv MOVE_DOWN                   &kp LG(RBKT)  &msc SCRL_UP    &msc SCRL_DOWN  &msc SCRL_LEFT   &msc SCRL_RIGHT  &trans
                              &trans     &trans     &trans                                                             &mkp RCLK     &mkp LCLK       &mkp MCLK
            >;
        };

        Media {
            display-name = "Media";
            bindings = <
&trans  &trans  &trans  &trans  &trans  &trans                    &trans          &trans        &out OUT_USB  &out OUT_BLE  &out OUT_TOG  &bt BT_CLR    &trans
&trans  &trans  &trans  &trans  &trans  &trans            &trans  &trans  &trans  &trans        &trans        &kp C_VOL_DN  &kp C_VOL_UP  &kp K_MUTE    &trans
&trans  &trans  &trans  &trans  &trans  &trans  &trans            &trans          &bt BT_SEL 0  &bt BT_SEL 1  &bt BT_SEL 2  &bt BT_SEL 3  &bt BT_SEL 4  &trans
                        &trans  &trans  &trans                                    &trans        &trans        &trans
            >;
        };

        MouseFast {
            display-name = "Fast";
            bindings = <
&trans  &trans  &trans  &trans  &trans  &trans                    &trans          &trans  &trans  &trans  &trans  &trans  &trans
&trans  &trans  &trans  &trans  &trans  &trans            &trans  &trans  &trans  &trans  &trans  &trans  &trans  &trans  &trans
&trans  &trans  &trans  &trans  &trans  &trans  &trans            &trans          &trans  &trans  &trans  &trans  &trans  &trans
                        &trans  &trans  &trans                                    &trans  &trans  &trans
            >;
        };

        MouseSlow {
            display-name = "Slow";
            bindings = <
&trans  &trans  &trans  &trans  &trans  &trans                    &trans          &trans  &trans  &trans  &trans  &trans  &trans
&trans  &trans  &trans  &trans  &trans  &trans            &trans  &trans  &trans  &trans  &trans  &trans  &trans  &trans  &trans
&trans  &trans  &trans  &trans  &trans  &trans  &trans            &trans          &trans  &trans  &trans  &trans  &trans  &trans
                        &trans  &trans  &trans                                    &trans  &trans  &trans
            >;
        };

        game {
            display-name = "Game";
            bindings = <
&kp TAB       &kp Q   &trans  &trans   &trans     &trans                         &kp UP                &trans     &trans         &trans      &trans  &trans  &trans
&kp LCTRL     &kp A   &kp S   &kp D    &kp F      &trans               &kp LEFT  &mkp RCLK  &kp RIGHT  &trans     &kp J          &kp K       &kp L   &kp P   &mouse_sweep
&kp LEFT_ALT  &trans  &trans  &trans   &trans     &kp B      &trans              &kp DOWN              &trans     &trans         &trans      &trans  &trans  &spc_spam
                              &kp ESC  &kp SPACE  &mkp LCLK                                            &kp ENTER  &kp BACKSPACE  &kp DELETE
            >;
        };
    };
};
